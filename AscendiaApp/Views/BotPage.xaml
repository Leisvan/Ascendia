<Page x:Class="AscendiaApp.Views.BotPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:appBehaviors="using:AscendiaApp.Behaviors"
      xmlns:controls="using:CommunityToolkit.WinUI.Controls"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
      xmlns:lctWorks="using:LCTWorks.WinUI.Controls"
      xmlns:local="using:AscendiaApp.Views"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ui="using:CommunityToolkit.WinUI"
      mc:Ignorable="d">

    <Grid Margin="0,8"
          ColumnSpacing="4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="500"
                              MinWidth="340"
                              MaxWidth="500" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid Background="{StaticResource AppColor1}"
              CornerRadius="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="68" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid Padding="16">
                <StackPanel HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Orientation="Horizontal"
                            Spacing="8">
                    <FontIcon Glyph="&#xE756;" />
                    <TextBlock FontSize="16"
                               Text="BOT LOG" />
                </StackPanel>

                <StackPanel HorizontalAlignment="Right"
                            Orientation="Horizontal"
                            Spacing="4">
                    <Button Command="{x:Bind ViewModel.ConnectBotCommand, Mode=OneWay}"
                            Style="{ThemeResource AccentButtonStyle}"
                            Visibility="{x:Bind ViewModel.IsDisconnected, Mode=OneWay}">
                        <FontIcon Glyph="&#xE768;" />
                    </Button>
                    <Button Command="{x:Bind ViewModel.DisconnectBotCommand, Mode=OneWay}"
                            Visibility="{x:Bind ViewModel.IsConnected, Mode=OneWay}">
                        <FontIcon Glyph="&#xE71A;" />
                    </Button>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="1"
                  Padding="16"
                  Background="#101010">
                <ScrollViewer x:Name="TextScrollViewer">
                    <RichTextBlock HorizontalAlignment="Stretch"
                                   VerticalAlignment="Stretch"
                                   FontFamily="Cascadia Mono">
                        <interactivity:Interaction.Behaviors>
                            <appBehaviors:ConsoleMirrorBehavior ScrollViewer="{x:Bind TextScrollViewer}" />
                        </interactivity:Interaction.Behaviors>
                    </RichTextBlock>
                </ScrollViewer>
            </Grid>
        </Grid>

        <ScrollViewer Grid.Column="2"
                      HorizontalAlignment="Stretch">
            <Grid RowSpacing="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <controls:SettingsExpander Description="Lista de configuraciones en uso por el bot"
                                           Header="Config"
                                           HeaderIcon="{ui:FontIcon Glyph=&#xE713;}"
                                           IsEnabled="{x:Bind ViewModel.IsConnected, Mode=OneWay}">
                    <StackPanel Orientation="Horizontal"
                                Spacing="8">
                        <ComboBox MinWidth="220"
                                  IsEnabled="{x:Bind ViewModel.IsRankingIdle, Mode=OneWay}"
                                  ItemsSource="{x:Bind ViewModel.Guilds, Mode=OneWay}"
                                  SelectedItem="{x:Bind ViewModel.SelectedGuild, Mode=TwoWay}" />
                        <Button Command="{x:Bind ViewModel.RefreshCommand}"
                                IsEnabled="{x:Bind ViewModel.IsRankingIdle, Mode=OneWay}">
                            <FontIcon Glyph="&#xE895;" />
                        </Button>
                    </StackPanel>
                </controls:SettingsExpander>
                <controls:SettingsExpander Grid.Row="1"
                                           Description="Lista de acciones relacionadas con el ranking"
                                           Header="Ranking"
                                           HeaderIcon="{ui:FontIcon Glyph=&#xE902;}"
                                           IsEnabled="{x:Bind ViewModel.IsConnected, Mode=OneWay}"
                                           IsExpanded="True">
                    <lctWorks:ThemedButton Command="{x:Bind ViewModel.CancelUpdateRankCommand}"
                                           Content="Cancelar"
                                           Style="{StaticResource DangerThemedButtonStyle}"
                                           Visibility="{x:Bind ViewModel.IsRankingBusy, Mode=OneWay}" />
                    <controls:SettingsExpander.Items>
                        <controls:SettingsCard HorizontalContentAlignment="Stretch"
                                               Description="Actualiza los perfiles registrados."
                                               Header="Actualizar">
                            <StackPanel Orientation="Horizontal"
                                        Spacing="8">
                                <DropDownButton Content="Actualizar"
                                                IsEnabled="{x:Bind ViewModel.IsRankingIdle, Mode=OneWay}">
                                    <DropDownButton.Flyout>
                                        <Flyout Placement="Bottom">
                                            <Grid MinWidth="240">
                                                <StackPanel Spacing="4">
                                                    <CheckBox Content="Forzar todos los perfiles"
                                                              IsChecked="{x:Bind ViewModel.ForceUpdate, Mode=TwoWay}" />
                                                    <CheckBox Content="Actualizar W/L"
                                                              IsChecked="{x:Bind ViewModel.UpdateWL, Mode=TwoWay}" />
                                                    <CheckBox Content="Notificar en Discord"
                                                              IsChecked="{x:Bind ViewModel.NotifyGuild, Mode=TwoWay}" />
                                                    <Rectangle Margin="0,8,0,4"
                                                               Style="{StaticResource SmoothHorizontalSeparatorRectangleStyle}" />
                                                    <Button HorizontalAlignment="Right"
                                                            Command="{x:Bind ViewModel.UpdateAllMembersCommand}"
                                                            Content="Actualizar perfiles"
                                                            IsEnabled="{x:Bind ViewModel.IsRankingIdle, Mode=OneWay}"
                                                            Style="{StaticResource AccentButtonStyle}" />
                                                </StackPanel>
                                            </Grid>
                                        </Flyout>
                                    </DropDownButton.Flyout>
                                </DropDownButton>
                            </StackPanel>
                        </controls:SettingsCard>
                        <controls:SettingsCard HorizontalContentAlignment="Stretch"
                                               Description="Muestra el ranking en el servidor seleccionado."
                                               Header="Mostrar">
                            <StackPanel Orientation="Horizontal"
                                        Spacing="8">
                                <Button Command="{x:Bind ViewModel.DisplayRankingCommand}"
                                        Content="Mostrar"
                                        IsEnabled="{x:Bind ViewModel.IsRankingIdle, Mode=OneWay}" />
                            </StackPanel>
                        </controls:SettingsCard>
                        <controls:SettingsCard HorizontalContentAlignment="Stretch"
                                               Description="Actualice la region de los jugadores basado en su historial de partidas."
                                               Header="Regiones">
                            <StackPanel Orientation="Horizontal"
                                        Spacing="8">

                                <DropDownButton Content="Actualizar regiones"
                                                IsEnabled="{x:Bind ViewModel.IsRankingIdle, Mode=OneWay}">
                                    <DropDownButton.Flyout>
                                        <Flyout Placement="Bottom">
                                            <Grid MinWidth="240">
                                                <StackPanel Spacing="4">
                                                    <NumberBox Header="Cantidad de partidas a revisar"
                                                               Maximum="50"
                                                               Minimum="10"
                                                               Value="{x:Bind ViewModel.MatchesToCheckForRegionUpdate, Mode=TwoWay}" />
                                                    <CheckBox Content="Forzar para todos"
                                                              IsChecked="{x:Bind ViewModel.ForceRegionsUpdate, Mode=TwoWay}" />
                                                    <Rectangle Margin="0,8,0,4"
                                                               Style="{StaticResource SmoothHorizontalSeparatorRectangleStyle}" />
                                                    <Button HorizontalAlignment="Right"
                                                            Command="{x:Bind ViewModel.UpdateMatchRegionsCommand}"
                                                            Content="Actualizar regiones"
                                                            IsEnabled="{x:Bind ViewModel.IsRankingIdle, Mode=OneWay}"
                                                            Style="{StaticResource AccentButtonStyle}" />
                                                </StackPanel>
                                            </Grid>
                                        </Flyout>
                                    </DropDownButton.Flyout>
                                </DropDownButton>
                            </StackPanel>
                        </controls:SettingsCard>
                    </controls:SettingsExpander.Items>
                </controls:SettingsExpander>
                <controls:SettingsExpander Grid.Row="2"
                                           Description="Info sobre variables (API)"
                                           Header="OpenDota API"
                                           HeaderIcon="{ui:FontIcon Glyph=&#xE753;}"
                                           IsEnabled="{x:Bind ViewModel.IsConnected, Mode=OneWay}">
                    <controls:SettingsExpander.Items>
                        <controls:SettingsCard HorizontalContentAlignment="Left"
                                               ContentAlignment="Left"
                                               Visibility="{x:Bind ViewModel.IsConnected, Mode=OneWay}">
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="Pedidos restantes:" />
                                <TextBlock Margin="12,0"
                                           Opacity=".7">
                                    <Run Text="Minuto: " />
                                    <Run Text="{x:Bind ViewModel.RemainingRequestMinute, Mode=OneWay}" />
                                </TextBlock>
                                <TextBlock Margin="12,0"
                                           Opacity=".7">
                                    <Run Text="Hoy: " />
                                    <Run Text="{x:Bind ViewModel.RemainingRequestDay, Mode=OneWay}" />
                                </TextBlock>
                                <TextBlock Margin="12,0"
                                           Opacity=".7">
                                    <Run Text="IP: " />
                                    <Run Text="{x:Bind ViewModel.Ip, Mode=OneWay}" />
                                </TextBlock>
                            </StackPanel>
                        </controls:SettingsCard>
                    </controls:SettingsExpander.Items>
                </controls:SettingsExpander>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>