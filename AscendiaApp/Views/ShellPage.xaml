<Page
    x:Class="AscendiaApp.Views.ShellPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:CommunityToolkit.WinUI"
    xmlns:views="using:AscendiaApp.Views"
    mc:Ignorable="d">

    <Grid Background="{StaticResource AppColor2}">
        <Grid.RowDefinitions>
            <RowDefinition Height="42" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid
            x:Name="AppTitleBar"
            Padding="16,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="{StaticResource AppColor1}"
            ColumnSpacing="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Image
                Height="18"
                VerticalAlignment="Center"
                Source="/Assets/StoreLogo.png" />
            <TextBlock
                x:Name="AppTitleBarText"
                Grid.Column="1"
                VerticalAlignment="Center" />
        </Grid>
        <Pivot
            Grid.Row="1"
            Margin="4,0"
            TabIndex="99">
            <PivotItem x:Uid="ShellPivotItem-Members">
                <views:MembersPage />
            </PivotItem>
            <PivotItem x:Uid="ShellPivotItem-Bot">
                <views:BotPage />
            </PivotItem>
            <PivotItem x:Uid="ShellPivotItem-About">
                <views:AboutPage />
            </PivotItem>
        </Pivot>
        <TextBlock
            Grid.Row="1"
            Margin="24,16"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Opacity=".4"
            Text="{x:Bind Version}" />
    </Grid>
</Page>