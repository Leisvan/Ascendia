<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="AscendiaApp.Views.MembersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:adapters="using:LCTWorks.WinUI.Xaml.Adapters"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:AscendiaApp.Views"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:observable="using:AscendiaApp.Observable"
      xmlns:toolkit="using:CommunityToolkit.WinUI.Controls"
      mc:Ignorable="d">

    <Page.Resources>
        <Style BasedOn="{StaticResource DefaultListViewItemStyle}"
               TargetType="ListViewItem">
            <Setter Property="Padding"
                    Value="5,5,0,5" />
            <Setter Property="HorizontalContentAlignment"
                    Value="Stretch" />
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="500"
                              MinWidth="340"
                              MaxWidth="600" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid Margin="0,8"
              RowSpacing="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid Padding="8"
                  Background="{StaticResource AppColor3}"
                  ColumnSpacing="8"
                  CornerRadius="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <AutoSuggestBox x:Uid="Members-SearchBox"
                                IsEnabled="False"
                                QueryIcon="Find"
                                Text="{x:Bind ViewModel.SearchTerm, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            Spacing="8">

                    <Button VerticalAlignment="Stretch"
                            Command="{x:Bind ViewModel.AddMemberCommand}"
                            IsEnabled="{x:Bind ViewModel.NotLoading, Mode=OneWay}">
                        <FontIcon FontFamily="{StaticResource MaterialSymbolsFontFamily}"
                                  Glyph="Add" />
                    </Button>
                    <Button VerticalAlignment="Stretch"
                            Command="{x:Bind ViewModel.RemoveSelectedMemberCommand}"
                            IsEnabled="{x:Bind ViewModel.NotLoading, Mode=OneWay}">
                        <FontIcon FontFamily="{StaticResource MaterialSymbolsFontFamily}"
                                  Glyph="delete_forever" />
                    </Button>
                    <Button VerticalAlignment="Stretch"
                            Command="{x:Bind ViewModel.RefreshCommand}"
                            IsEnabled="{x:Bind ViewModel.NotLoading, Mode=OneWay}">
                        <FontIcon FontFamily="{StaticResource MaterialSymbolsFontFamily}"
                                  Glyph="Refresh" />
                    </Button>
                    <AppBarSeparator />
                    <Button VerticalAlignment="Stretch"
                            Command="{x:Bind ViewModel.UpdateAllMembersCommand}"
                            IsEnabled="{x:Bind ViewModel.NotLoading, Mode=OneWay}">
                        <FontIcon FontFamily="{StaticResource MaterialSymbolsFontFamily}"
                                  Glyph="published_with_changes" />
                    </Button>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="1"
                  Background="{StaticResource AppColor3}"
                  CornerRadius="8">
                <ListView Padding="4,8"
                          ItemsSource="{x:Bind ViewModel.Members, Mode=OneWay}"
                          SelectedItem="{x:Bind ViewModel.SelectedMember, Mode=TwoWay}">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="observable:MemberObservable">
                            <Grid Margin="8,0"
                                  Padding="8"
                                  Background="{StaticResource AppColor4}"
                                  CornerRadius="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Grid Width="56"
                                      Height="56">
                                    <Ellipse Stroke="{StaticResource AppColor2}"
                                             StrokeThickness="2">
                                        <Ellipse.Fill>
                                            <ImageBrush ImageSource="{x:Bind AvatarUrl, Mode=OneWay}" />
                                        </Ellipse.Fill>
                                    </Ellipse>
                                </Grid>
                                <Grid Grid.Column="1"
                                      Margin="16,0,0,8"
                                      VerticalAlignment="Center"
                                      ColumnSpacing="8">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Style="{StaticResource AppItemMainTextStyle}"
                                               Text="{x:Bind DisplayName, Mode=OneWay}" />
                                    <TextBlock Grid.Column="1"
                                               VerticalAlignment="Center"
                                               Opacity=".4"
                                               Style="{StaticResource AppItemMainTextStyle}"
                                               Text="" />
                                    <TextBlock Grid.Row="1"
                                               Grid.ColumnSpan="2"
                                               FontSize="14"
                                               Style="{StaticResource AppItemSecondaryTextStyle}"
                                               Text="{x:Bind Caption, Mode=OneWay}" />
                                    <TextBlock Grid.Row="2"
                                               Grid.ColumnSpan="2"
                                               Style="{StaticResource AppItemSecondaryTextStyle}"
                                               Text="{x:Bind Team, Mode=OneWay}" />
                                </Grid>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <Border VerticalAlignment="Stretch"
                        Background="{StaticResource AppColor3}"
                        Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay}">
                    <StackPanel VerticalAlignment="Center"
                                Orientation="Vertical"
                                Spacing="16">
                        <ProgressRing IsActive="True" />
                        <TextBlock MaxWidth="320"
                                   HorizontalAlignment="Center"
                                   Text="{x:Bind ViewModel.LoadingNotification, Mode=OneWay}"
                                   TextAlignment="Center"
                                   TextWrapping="WrapWholeWords" />
                        <Button x:Uid="Members-CancelButton"
                                HorizontalAlignment="Center"
                                Command="{x:Bind ViewModel.CancelCommand}"
                                IsEnabled="{x:Bind ViewModel.CancelEnabled, Mode=OneWay}"
                                Visibility="{x:Bind ViewModel.CancelVisibile, Mode=OneWay}" />
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
        <toolkit:GridSplitter Grid.Column="1"
                              Height="32"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Center"
                              ResizeBehavior="BasedOnAlignment"
                              ResizeDirection="Auto">
            <toolkit:GridSplitter.RenderTransform>
                <TranslateTransform Y="-7" />
            </toolkit:GridSplitter.RenderTransform>
        </toolkit:GridSplitter>
    </Grid>
</Page>