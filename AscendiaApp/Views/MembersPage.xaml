<Page x:Class="AscendiaApp.Views.MembersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:adapters="using:LCTWorks.WinUI.Xaml.Adapters"
      xmlns:core="using:Microsoft.Xaml.Interactivity"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:helpers="using:AscendiaApp.Helpers"
      xmlns:i="using:Microsoft.Xaml.Interactivity"
      xmlns:local="using:AscendiaApp.Views"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:observable="using:AscendiaApp.Observable"
      xmlns:toolkit="using:CommunityToolkit.WinUI.Controls"
      mc:Ignorable="d">

    <Page.Resources>
        <SolidColorBrush x:Key="ListViewItemBackground">#FF2D2D2D</SolidColorBrush>
        <Style BasedOn="{StaticResource DefaultGridViewItemStyle}"
               TargetType="GridViewItem">
            <Setter Property="HorizontalContentAlignment"
                    Value="Stretch" />
        </Style>
    </Page.Resources>
    <i:Interaction.Behaviors>
        <core:EventTriggerBehavior EventName="Loaded">
            <core:InvokeCommandAction Command="{x:Bind ViewModel.InitializeCommand}" />
        </core:EventTriggerBehavior>
    </i:Interaction.Behaviors>

    <Grid Margin="0,8"
          RowSpacing="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Padding="8"
              Background="{StaticResource AppColor3}"
              ColumnSpacing="8"
              CornerRadius="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"
                                  MaxWidth="400" />
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <AutoSuggestBox x:Uid="Members-SearchBox"
                            QueryIcon="Find"
                            TabIndex="0"
                            Text="{x:Bind ViewModel.SearchTerm, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <StackPanel Grid.Column="2"
                        Orientation="Horizontal"
                        Spacing="8">

                <Button VerticalAlignment="Stretch"
                        Command="{x:Bind ViewModel.AddMemberCommand}"
                        IsEnabled="{x:Bind ViewModel.NotLoading, Mode=OneWay}">
                    <FontIcon FontFamily="{StaticResource MaterialSymbolsFontFamily}"
                              Glyph="Add" />
                </Button>
                <Button VerticalAlignment="Stretch"
                        Command="{x:Bind ViewModel.EditSelectedMemberCommand}"
                        IsEnabled="{x:Bind ViewModel.NotLoading, Mode=OneWay}">
                    <FontIcon FontFamily="{StaticResource MaterialSymbolsFontFamily}"
                              Glyph="edit" />
                </Button>
                <Button VerticalAlignment="Stretch"
                        Command="{x:Bind ViewModel.RemoveSelectedMemberCommand}"
                        IsEnabled="{x:Bind ViewModel.NotLoading, Mode=OneWay}">
                    <FontIcon FontFamily="{StaticResource MaterialSymbolsFontFamily}"
                              Glyph="delete_forever" />
                </Button>
                <Button VerticalAlignment="Stretch"
                        Command="{x:Bind ViewModel.RefreshCommand}"
                        IsEnabled="{x:Bind ViewModel.NotLoading, Mode=OneWay}">
                    <FontIcon FontFamily="{StaticResource MaterialSymbolsFontFamily}"
                              Glyph="Refresh" />
                </Button>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1"
              Background="{StaticResource AppColor3}"
              CornerRadius="8">
            <ListView Background="Transparent"
                      ItemsSource="{x:Bind ViewModel.Members, Mode=OneWay}"
                      SelectedItem="{x:Bind ViewModel.SelectedMember, Mode=TwoWay}">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="observable:MemberObservable">
                        <Grid Margin="0,8"
                              ColumnSpacing="8"
                              RowSpacing="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width=".5*"
                                                  MinWidth="240" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Grid Grid.RowSpan="2"
                                  Width="72"
                                  Height="72"
                                  Margin="8,0">
                                <Ellipse Stroke="{StaticResource AppColor4}"
                                         StrokeThickness="2">
                                    <Ellipse.Fill>
                                        <ImageBrush ImageSource="{x:Bind AvatarUrl, Mode=OneWay}" />
                                    </Ellipse.Fill>
                                </Ellipse>
                                <Grid Width="32"
                                      Height="32"
                                      HorizontalAlignment="Right"
                                      VerticalAlignment="Bottom">
                                    <Ellipse Fill="{StaticResource AppColor1}"
                                             Stroke="{StaticResource AppColor4}"
                                             StrokeThickness="2" />
                                    <Image Width="24"
                                           Height="24"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Source="{x:Bind helpers:AssetsHelper.GetPositionImageSource(Position)}" />
                                </Grid>
                            </Grid>
                            <Grid Grid.Column="1"
                                  Margin="2"
                                  VerticalAlignment="Center">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.ColumnSpan="2"
                                           Margin="0,0,0,4"
                                           HorizontalTextAlignment="Left"
                                           Style="{StaticResource AppItemTitleTextBlockStyle}"
                                           Text="{x:Bind DisplayName, Mode=OneWay}"
                                           TextLineBounds="Tight" />
                                <TextBlock Grid.Row="1"
                                           Grid.ColumnSpan="2"
                                           HorizontalTextAlignment="Left"
                                           Opacity=".6"
                                           Style="{StaticResource SmoothItemCaptionTextBlockStyle}"
                                           Text="{x:Bind AccountName, Mode=OneWay}" />
                                <TextBlock Grid.Row="2"
                                           Margin="0,4,4,0"
                                           FontFamily="{StaticResource MaterialSymbolsFontFamily}"
                                           Foreground="{StaticResource HighlightColor}"
                                           Style="{StaticResource SmoothItemCaptionTextBlockStyle}"
                                           Text="crown"
                                           Visibility="{x:Bind IsCaptain}" />
                                <TextBlock Grid.Row="2"
                                           Grid.Column="1"
                                           Margin="0,4,4,0"
                                           VerticalAlignment="Center"
                                           HorizontalTextAlignment="Left"
                                           Style="{StaticResource SmoothItemCaptionTextBlockStyle}"
                                           Text="{x:Bind Team, Mode=OneWay}"
                                           TextLineBounds="Tight" />
                            </Grid>
                            <Border Grid.Column="2"
                                    Width="120"
                                    Style="{StaticResource ItemChipBorderStyle}">
                                <StackPanel Orientation="Horizontal"
                                            Spacing="8">
                                    <Image Width="42"
                                           Source="{x:Bind helpers:AssetsHelper.GetRankImageSource(RankTier)}" />
                                    <TextBlock VerticalAlignment="Center"
                                               Text="{x:Bind Leaderboard}" />
                                </StackPanel>
                            </Border>
                            <Border Grid.Column="3"
                                    Width="120"
                                    Style="{StaticResource ItemChipBorderStyle}">
                                <StackPanel Orientation="Horizontal"
                                            Spacing="4">
                                    <TextBlock VerticalAlignment="Center"
                                               FontFamily="{StaticResource MaterialSymbolsFontFamily}"
                                               FontSize="24"
                                               Foreground="{StaticResource HighlightColor}"
                                               Text="swap_vert"
                                               TextLineBounds="Tight" />
                                    <TextBlock VerticalAlignment="Center"
                                               Text="{x:Bind GetWinRate()}"
                                               TextAlignment="Center" />
                                </StackPanel>
                            </Border>
                            <StackPanel Grid.Column="5"
                                        Margin="0,0,0,8"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Bottom"
                                        Orientation="Horizontal"
                                        Spacing="4">
                                <TextBlock Foreground="{StaticResource WarningColor}"
                                           Style="{StaticResource MaterialSymbolsTextBlockStyle}"
                                           Text="schedule"
                                           Visibility="{x:Bind IsOutDated}" />
                                <TextBlock Foreground="{StaticResource SuccessColor}"
                                           Style="{StaticResource MaterialSymbolsTextBlockStyle}"
                                           Text="check_circle"
                                           Visibility="{x:Bind IsUpToDate}" />
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Border VerticalAlignment="Stretch"
                    Background="{StaticResource AppColor3}"
                    Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay}">
                <StackPanel VerticalAlignment="Center"
                            Orientation="Vertical"
                            Spacing="16">
                    <ProgressRing IsActive="True" />
                    <TextBlock MaxWidth="320"
                               HorizontalAlignment="Center"
                               Text="{x:Bind ViewModel.LoadingNotification, Mode=OneWay}"
                               TextAlignment="Center"
                               TextWrapping="WrapWholeWords" />
                    <Button x:Uid="Members-CancelButton"
                            HorizontalAlignment="Center"
                            Command="{x:Bind ViewModel.CancelCommand}"
                            IsEnabled="{x:Bind ViewModel.CancelEnabled, Mode=OneWay}"
                            Visibility="{x:Bind ViewModel.CancelVisibile, Mode=OneWay}" />
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>