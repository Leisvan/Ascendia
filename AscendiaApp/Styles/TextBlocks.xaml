<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="AppItemTitleTextBlockStyle"
           BasedOn="{StaticResource SmoothTitleTextBlockStyle}"
           TargetType="TextBlock">
        <Setter Property="FontFamily"
                Value="{StaticResource SmoothBoldFontFamily}" />
        <Setter Property="Foreground"
                Value="{StaticResource TextColor2}" />
    </Style>
    <Style x:Key="AppItemSubtitleTextBlockStyle"
           BasedOn="{StaticResource SmoothSubtitleTextBlockStyle}"
           TargetType="TextBlock">
        <Setter Property="Foreground"
                Value="{StaticResource TextColor2}" />
    </Style>
</ResourceDictionary>